    <body>
        <div class="container p-4">
    <form class="form-group col-sm-12 " action="/register" method="post" enctype="multipart/form-data">
        <div class="card mx-auto col-md-5 my-auto col-sm-12 border-0" style="transform: translateY(2%);">
            <div class="card-header text-center bg-dark text-light">
             <h6 class="header-title text-cneter text-light "><%- data %></h6>
            </div>
            <div class="card-body border rounded">
                <div class="form-group mt-2">
                    <center>
                     <img src="/images/dp2.jpg" height="150px;" class="col-md-6 mx-auto">
                    </center>

                 </div>
                 
                <div class="form-group mt-2">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <label>Mobile</label>
                    <input type="text" name="mobile" id="mobile" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <label>Confirm Password</label>
                    <input type="password" name="c_password" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <label>Profile </label>
                    <input type="file" name="img" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <button class="btn btn-danger col-md-12 mx-auto">Register</button>
                </div>
                <div class="col-md-12 float-end text-right"><a href="/login"><span class="text-right float-end" style="font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Already have a account &rarr;</span> </a></div>
            </div>

         
            <div class="col-md-12 p-2">

                <% if(msg.length > 0 ) 
                {%>
                    <div class="alert alert-success alert-dismissible  col-md-12 " role="alert">
                        <strong>Great !</strong> <%- msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>   
                <% } %>

                <% if( err.length > 0 ) 
                {%>
                    <div class="alert alert-warning alert-dismissible col-md-12 " role="alert">
                        <strong>Opps !</strong> <%- err %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                </div>

        </div>     
    </form>
</body>
