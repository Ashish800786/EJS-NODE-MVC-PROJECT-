<%- include('../layouts/main_layout.ejs')  %>
 <!--Container Main start-->
<div class="height-100 bg-light col-md-12" >
    <h4>Users </h4>
    <div class="row">
        <div class="col-md-12 card border-0 p-3 ">
            <div class="card-body border border-mutted  rounded " style="height:max-content;">
                <form class="form-group col-sm-12 " action="/user/edit/<%= id %>" method="post">
                    <div class="card mx-auto col-md-5 my-auto col-sm-12 " style="transform: translateY(2%);">
                        <div class="card-header text-center">
                         <h6 class="header-title text-cneter"><%- data %></h6>
                        </div>
                        <div class="card-body">
                            <div class="form-group mt-2">
                                <label>Name</label>
                                <input type="text" name="name" class="form-control" value="<%= user.name %>"/>
                            </div>
                            <div class="form-group mt-2">
                                <label>Email</label>
                                <input type="email" name="email" class="form-control" value="<%= user.email %>"/>
                            </div>
                            <div class="form-group mt-2">
                                <label>Mobile</label>
                                <input type="text" name="mobile" class="form-control" value="<%= user.mobile %>"/>
                            </div>
                            <!-- <div class="form-group mt-2">
                                <label>Password</label>
                                <input type="password" name="password" class="form-control" />
                            </div>
                            <div class="form-group mt-2">
                                <label>Confirm Password</label>
                                <input type="password" name="c_password" class="form-control" />
                            </div> -->
                            <div class="form-group mt-2">
                                <button class="btn btn-danger col-md-12 mx-auto">Update</button>
                            </div>
                            <!-- <div class="col-md-12 float-end text-right"><a href="/login"><span class="text-right float-end" style="font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Already have a account &rarr;</span> </a></div> -->
                        </div>
            
                     
                        <div class="col-md-12 p-2">
                            <% if(msg.length > 0 ) {%>
                                  <div class="alert alert-success alert-dismissible  col-md-12 " role="alert">
                                    <strong>Great !</strong> <%- msg %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
            
                                  
                            <% } %>
                            <% if( err.length > 0 ) {%>
                                  <div class="alert alert-warning alert-dismissible col-md-12 " role="alert">
                                    <strong>Opps !</strong> <%- err %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            <% } %>
                            </div>
            
                    </div>     
                </form>
            </div>
        </div>
    </div>
</div>
<!--Container Main end-->
<%- include('../layouts/footer')  %>